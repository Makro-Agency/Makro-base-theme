{% schema %}
    {
        "name": "Hero Slider",
        "tag": "section",
        "class": "Hero Slider",
        "settings": [
           {
                "type": "header",
                "content": "Image Content"
            },
            {
                "type": "image_picker",
                "id": "desktop_image",
                "label": "Desktop Image"
            },
            {
                "type": "image_picker",
                "id": "mobile_image",
                "label": "Mobile Image"
            },
            {
                "type": "header",
                "content": "Video Content"
            },
            {
                "type": "paragraph",
                "content": "Only works, if above image is not there. video is autoplay by default (autoplay didn't works with youtube)"
            },
            {
                "type": "image_picker",
                "id": "cover_image",
                "label": "Cover Image",
                "info": "Add a cover image to enhance the optimized loading experience for the video."
            },
            {
                "type": "video",
                "id": "video",
                "label": "A Shopify-hosted video",
                "info": "MP4 video"
            },
            {
                "type": "paragraph",
                "content": "OR"
            },
            {
                "type": "video_url",
                "id": "video_url",
                "label": "Vimeo/Youtube video",
                "accept": ["youtube", "vimeo"]
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Top Padding",
                "default": 36
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 4,
                "unit": "px",
                "label": "Bottom Padding",
                "default": 36
            }
        ],
        "blocks": [

        ],
        "presets": [
            {"name": "Custom Hero Slider"}
        ]
    }
{% endschema %}