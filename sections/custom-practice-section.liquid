
{% style %}
#blog-list{
     display:flex; 
     width:100%;
     max-width:100%; 
     gap:30px; 
}
.blog-post{
    max-width:25%;
    width:100%; 
}
#blog-list img.motion-reduce{ max-width:100%; }
{% endstyle %}
<div class="section custom-section">
<div class="home-blog-posts page-width section-padding">
   <div class="section-wrapper">
     <h3>{{ section.settings.description }}</h3>
   </div>

 <div class="product-list">
  {% assign frontpage_collection = collections['frontpage'] %}
  
  {% if frontpage_collection.products.size > 0 %}
    {% for product in frontpage_collection.products %}
      <h4>{{ product.title  }}</h4>
    {% endfor %}
  {% else %}
    <p>No products available in this collection.</p>
  {% endif %}
  <br>
  <h3> {{ all_products['no-rouge'].title | remove: 'No' | upcase  }} </h3>
  <h3> title before modified {{ all_products['square-hair-brush-32mm'].title  }}</h3>
    <h3>  {{  all_products['square-hair-brush-32mm'].title | replace: '32mm','40mm'  }} : {{ all_products['square-hair-brush-32mm'].price | money | replace: '$','Rs' }} </h3>
</div>

<div class="main-blog">

<div class="main-blog">

  {% assign blog_handle = 'news' %}  <!-- Replace with your blog's handle -->
  {% assign blog = blogs[blog_handle] %}

  <div id="blog-count-section">
    <h2>Live Blog Posts</h2>

    {% if blog %}
      <p>Total Blogs: {{ blog.articles_count }}</p>

      <div id="blog-list">
        {% paginate blog.articles by 2 %} <!-- This will paginate the blog posts, showing 5 articles per page -->

          {% for article in blog.articles %}
            <div class="blog-post">
              <img
                srcset="
                  {%- if article.image.src.width >= 165 -%}{{ article.image.src | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if article.image.src.width >= 360 -%}{{ article.image.src | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if article.image.src.width >= 533 -%}{{ article.image.src | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if article.image.src.width >= 720 -%}{{ article.image.src | image_url: width: 720 }} 720w,{%- endif -%}
                  {%- if article.image.src.width >= 1000 -%}{{ article.image.src | image_url: width: 1000 }} 1000w,{%- endif -%}
                  {%- if article.image.src.width >= 1500 -%}{{ article.image.src | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {{ article.image.src | image_url }} {{ article.image.src.width }}w
                "
                src="{{ article.image.src | image_url: width: 533 }}"
                sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                alt="{{ article.image.src.alt | escape }}"
                class="motion-reduce"
                {% unless lazy_load == false %}
                  loading="lazy"
                {% endunless %}
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
              >
              <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
              <p> {{ article.excerpt | strip_html | truncatewords: 30 }} </p>
              <p> {{ article.content | strip_html | truncatewords: 30 }} </p>
            </div>
          {% endfor %}

          <!-- Pagination -->
          <div class="pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="prev">Previous</a>
            {% endif %}


            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="next">Next</a>
            {% endif %}
          </div>

        {% endpaginate %}
      </div>

    {% else %}
      <p>No blogs found.</p>
    {% endif %}
  </div>

</div>


</div>


 

</div>
</div>

{% schema %}
{
  "name": "custom practice section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    },
    
  ],
  "presets": [
    {
      "name": "custom practice section"
    }
  ]
}
{% endschema %}


