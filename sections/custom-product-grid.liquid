},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "header",
"content": "Section Padding Setting For Responsiveness"
},
{
"type": "range",
"id": "padding_top_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding top responsive",
"default": 36
},
{
"type": "range",
"id": "padding_bottom_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding bottom responsive",
"default": 36
}
],
"blocks": [
{
"type": "product_card",
"name": "Product Card",
"settings": [
{
"type": "image_picker",
"id": "product_image",
"label": "Product Image"
}
]
}
],
"presets": [
{
"name": "Product Grid Section",
}
]
}

{% endschema %}