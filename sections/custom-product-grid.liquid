{% assign collection_handle = section.settings.collection_select %}
{% assign products_per_row = section.settings.products_per_row %}
{% assign collection = collections[collection_handle] %}
<div class="custom-grid-wrapper">
    <h2>{{ section.settings.title }}</h2>
    <div class="custom-pro-grid">
        {% for product in collection.products %}
        <div class="product-card" style="width: calc(100% / {{ products_per_row }});">
            <a href="{{ product.url }}">
                <div class="product-image">
                    <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" width="100%" height="100%">
                </div>
                <div class="product-details">
                    <h3>{{ product.title }}</h3>
                    <p class="product-price">{{ product.price | money }}</p>

                    {% if section.settings.show_vendor %}
                    {% if product.vendor %}
                    <p class="product-vendor">{{ product.vendor }}</p>
                    {% endif %}
                    {% endif %}

                    {% if section.settings.show_tags %}
                    {% if product.tags.size > 0 %}
                    <p class="product-tags">{{ product.tags | join: ', ' }}</p>
                    {% endif %}
                    {% endif %}
                    
                    {% if section.settings.show_color_swatches %}
                    {% assign color_option_index = product.options_with_values %}
                    {% if color_option_index != -1 %}
                    <div class="product-swatch">
                        <p><strong>Color:</strong></p>
                        <ul class="swatches">
                            {% for variant in product.variants %}
                              
                            {% assign color_value = variant.options[color_option_index] %}
                            <p> {{ color_option_index }}</p>
                            <li class="swatch" style="background-color: {{ color_value | downcase }};" title="{{ color_value }}">
                                <input type="radio" name="color_{{ product.id }}" value="{{ color_value }}" id="color_{{ product.id }}_{{ color_value }}" />
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
<style>
        .custom-pro-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        background: #fff;
        transition: box-shadow 0.3s;
    }

    .product-card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .product-image img {
        width: 100%;
        height: auto;
    }

    .product-details h3 {
        font-size: 16px;
        margin: 10px 0;
    }

    .product-price {
        font-size: 14px;
        color: #333;
    }

    .product-vendor,
    .product-tags {
        font-size: 12px;
        color: #777;
    }

    .swatches {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 10px;
    }

    .swatch {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        cursor: pointer;
        border: 2px solid #ddd;
    }

    .swatch input[type="radio"] {
        display: none;
    }

    .swatch:hover {
        border: 2px solid #333;
    }

    .custom-custom-pro-grid {
        padding: {
                {
                section.settings.padding_top
            }
        }

        px 0 {
                {
                section.settings.padding_bottom
            }
        }

        px 0;
    }

    @media screen and (max-width: 768px) {
        .custom-custom-pro-grid {
            padding: {
                    {
                    section.settings.padding_top_res
                }
            }

            px 0 {
                    {
                    section.settings.padding_bottom_res
                }
            }

            px 0;
        }
    }
</style>

{% schema %}
{
"name": "Product Grid Section",
"class": "custom-custom-pro-grid",
"settings": [
{
"type": "text",
"id": "title",
"label":"Section Title",
"info":"Section Title"
},
{
"type": "collection",
"id": "collection_select",
"label": "Select Collection",
"info": "Choose a collection to display products from."
},
{
"type": "number",
"id": "products_per_row",
"label": "Products per row",
},
{
"type": "checkbox",
"id":"show_vendor",
"label": "Display Vendor"
},
{
"type": "checkbox",
"id":"show_tags",
"label": "Display Tags"
},
{
"type": "checkbox",
"id":"show_price",
"label": "Display Price"
},
{
