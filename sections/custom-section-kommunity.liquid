<div class="kommunity-wrapper">
    <div class="row {{ section.settings.content_position }}">
        <div class="content-wrapper">
            <div class="content-inner-wrapper">
                {% if section.settings.sub_title != blank %}
                <span>{{ section.settings.sub_title }}</span>
                {% endif %}
                {% if section.settings.heading != blank %}
                <h2 style="color: black">{{ section.settings.heading }}</h2>
                {% endif %}
                {% if section.settings.description != blank %}
                {{ section.settings.description }}
                {% endif %}
                {% if section.settings.btn_text != blank %}
                <a href="{% if section.settings.btn_link != blank %}{{ section.settings.btn_link }} else #{% endif  %}">
                    {{ section.settings.btn_text }}</a>
                {% endif %}
            </div>
        </div>
        <div class="image-outer-wrapper">
            <div class="image-wrapper">
                {% if section.settings.image != blank %}
                <img src="{{ section.settings.image | image_url }}" alt="Desktop Image" loading="lazy" width="auto"
                    height="auto" class="desktop-image" sizes="(max-width: 768px) 100vw, 768px">
                {% endif %}
                {% if section.settings.image_mobile != blank %}
                <img src="{{ section.settings.image_mobile | image_url}}" alt="Mobile image" width="auto" height="auto"
                    class="mobile-image" sizes="(max-width: 768px) 100vw, 768px">
                {% endif %}
            </div>
            {% for block in section.blocks %}
            {%- case block.type -%}
            {%- when 'svg-with-text' -%}
            <div class="featured-item {{ block.id }}" style="background-color: {{ block.settings.bg_color }}">
                {% if block.settings.svg_icon != blank %}
                <span class="svg-icon" style="color: {{ block.settings.svg_color }}">{{ block.settings.svg_icon }}
                </span>
                {% endif %}
                {% if block.settings.featured_text != blank %}
                <p class="featured-text" style="color: {{ block.settings.featured_text_color }}">{{
                    block.settings.featured_text }}</p>
                {% endif %}
            </div>
            {%- when 'caption-with-text' -%}
            <div class="featured-item {{ block.id }}" style="background-color: {{ block.settings.bg_color }}">
                {% if block.settings.caption_text != blank %}
                <span class="svg-icon caption-text" style="color: {{ block.settings.caption_color }}">{{
                    block.settings.caption_text }} </span>
                {% endif %}
                {% if block.settings.featured_text != blank %}
                <p class="featured-text" style="color: {{ block.settings.featured_text_color }}">{{
                    block.settings.featured_text }}</p>
                {% endif %}
            </div>

            {% endcase %}
            {% endfor %}

        </div>

    </div>
</div>
{% style %}
{% for block in section.blocks %}
.featured-item.{{ block.id }} .caption-text {color:{{ block.settings.svg_color }};}
.featured-item.{{ block.id }} .svg-icon svg {color: {{ block.settings.svg_color }} ;}
.featured-item.{{ block.id }} .svg-icon svg path { stroke: {{ block.settings.svg_color }};}

{% endfor %}
{% if section.settings.image_mobile %}
@media only screen and (min-width: 769px){
.custom-banner-bio-k .image_mobile {display: none;}
}
{% endif %}
{% if section.settings.image %}
{% if section.settings.image_mobile != blank %}
@media only screen and (max-width: 768px){
.custom-banner-bio-k .desktop-image { display: none; }
}
{% else %}
.custom-banner-bio-k .banner-wrapper { display: block; }
{% endif %}
{% endif %}
.custom-kommunity-section {padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0; }
.custom-kommunity-section .row {display: flex;}
.custom-kommunity-section .row >*{flex: 1 0 0;}
.custom-kommunity-section .row.content-left{flex-flow: row-reverse;}

@media only screen and (max-width: 768px){
.custom-kommunity-section {padding: {{ section.settings.padding_top_res }}px 0 {{ section.settings.padding_bottom_res
}}px 0;}
}
{% endstyle %}

{% schema %}
{
"name": "custom kommunity section",
"tag": "section",
"class": "custom-kommunity-section",
"settings": [
{
"type": "text",
"id": "sub_title",
"default": "Sub Title",
"label": "Sub Title"
},
{
"type": "text",
"id": "heading",
"default": "Heading",
"label": "Heading"
},
{
"type": "richtext",
"id": "description",
"default": "<p>Description</p>",
"label": "Description"
},
{
"type": "text",
"id": "btn_text",
"default": "Button Text",
"label": "Button Text"
},
{
"type": "url",
"id": "btn_link",
"label": "Button Link"
},
{
"type": "image_picker",
"id": "image",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "image_mobile",
"label": "Mobile Image"
},
{
"type": "select",
"id": "content_position",
"options": [
{
"value": "content-left",
"label": "content left"
},
{
"value": "content-right",
"label": "content right"
}
],
"default": "content-right",
"label": "Content Position",
"info": "Select for content position"
},
{
"type": "header",
"content": "Section Padding Setting For Desktop"
},
{
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "header",
"content": "Section Padding Setting For Responsiveness"
},
{
"type": "range",
"id": "padding_top_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding top responsive",
"default": 36
},
{
"type": "range",
"id": "padding_bottom_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding bottom responsive",
"default": 36
}
],
"blocks": [
{
"type": "svg-with-text",
"name":"SVG With Text",
"settings": [
{
"type": "color",
"id":"bg_color",
"label": "Featured Item BG Color"
},
{
"type": "html",
"id":"svg_icon",
"default": "Place SVG Code Here",
"label": "SVG ICON"
},
{
"type": "color",
"id":"svg_color",
"label": "SVG Color"
},
{
"type": "text",
"id":"featured_text",
"default": "Exclusive Access to Expert Advice and Insights",
"label": "Featured Text"
},
{
"type": "color",
"id":"featured_text_color",
"label": "Featured Text Color"
}
]

},
{
"type": "caption-with-text",
"name":"Caption With Text",
"settings": [
{
"type": "color",
"id":"bg_color",
"label": "Featured Item BG Color"
},
{
"type": "text",
"id":"caption_text",
"default": "Place Caption Text here",
"label": "Caption Text"
},
{
"type": "color",
"id":"caption_color",
"label": "Caption Color"
},
{
"type": "text",
"id":"featured_text",
"default": "Exclusive Access to Expert Advice and Insights",
"label": "Featured Text"
},
{
"type": "color",
"id":"featured_text_color",
"label": "Featured Text Color"
}
]

}
],
"presets": [
{
"name": "custom kommunity section"
}
],
"max_blocks": 3
}
{% endschema %}