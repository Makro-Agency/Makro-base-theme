{%- style -%}

.image-cards {
    display: flex;
    gap: 30px;
}
.image-block a {
  position: relative;
  display: block;
  line-height: 0;
}
.image-block a::before {
  content: "";
  background: #000;
  opacity: {{ section.settings.overlay_opacity }}%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
}
  
{%- endstyle -%}

<section>
    <div class="page-width">
      {% if section.settings.text != blank %}
        <div class="title">
          <h1>{{ section.settings.text | upcase}}</h1>
        </div>
        {% else %}
          <div class="title">
            <h1>This is my learning list title</h1>
          </div>
      {% endif %}
      
    
      {% unless section.settings.textarea != blank %}
        <div class="sample_text">This is sample text are unless condition.</div>
      {% elsif section.settings.textarea != blank %}
        <div class="sample_text">{{ section.settings.textarea }}</div>
      {% endunless %}

      {% if section.settings.richtext != blank %}<div class="richtext">{{ section.settings.richtext }}</div>{% endif %}
      {% if section.settings.inline_richtext != blank %}<div class="inline_richtext">{{ section.settings.inline_richtext }}</div>{% endif %}
      {% if section.settings.html != blank %}<div class="inline_richtext">{{ section.settings.html }}</div>{% endif %}
      

      {% assign selected_option = "option 2" %}

      {% case selected_option %}
        {% when "option 1" %}
          option 1 is selected
        {% when "option 2" %}
          option 2 is selected
        {% when "option 3" %}
          option 3 is selected
        {% else %}
          option 4 is selected
      {% endcase %}

      <div class="image-cards">
        {%- for block in section.blocks -%}
            <div class="image-block">
              {% if block.settings.image_card != blank %}   
                {%- liquid
                  assign height = block.settings.image_card.width | divided_by: block.settings.image_card.aspect_ratio | round              
                  assign sizes = '(min-width: 750px) 50vw, 100vw'
                  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                -%}
                {% assign cardimage = 'image_card' %}
                <a href="#">
                  {{
                    block.settings.image_card
                    | image_url: width: 1100
                    | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths, class: cardimage
                  }}
                </a>
              {%- else -%}                     
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}        
              {%- endif -%}
            </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
  
  
  {% schema %}
  {
    "name": "Learn settings list",
    "class": "setting-list",
    "settings": [
      {
        "type": "header",
        "content": "Learn List"
      },
      {
        "type": "text",
        "id": "text",
        "label": "My Learn List",
