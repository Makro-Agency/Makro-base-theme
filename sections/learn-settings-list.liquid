      },
      {
        "type": "textarea",
        "label": "textarea",
        "id": "textarea"
      },
      {
        "type": "richtext",
        "label": "richtext",
        "id": "richtext"
      },
      {
        "type": "inline_richtext",
        "label": "inline_richtext",
        "id": "inline_richtext"
      },
      {
        "type": "html",
        "label": "html",
        "id": "html"
      },
      {
        "type": "image_picker",
        "label": "select image",
        "id": "image"
      },
      {
        "type": "range",
        "label": "overlay opacity",
        "id": "overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "default": 0,
      },
      {
        "type": "select",
        "label": "select",
        "id": "select",
        "options": [
          {
            "value": "option 1",
            "label": "option 1"
          },
          {
            "value": "option 2",
            "label": "option 2"
          },
          {
            "value": "option 3",
            "label": "option 3"
          },
          {
            "value": "option 4",
            "label": "option 4"
          }
        ],
        "default": "option 1"
      },
      {
        "type": "radio",
        "label": "radio",
        "id": "radio",
        "options": [
          {
            "value": "option 1",
            "label": "option 1"
          },
          {
            "value": "option 2",
            "label": "option 2"
          },
          {
            "value": "option 3",
            "label": "option 3"
          },
          {
            "value": "option 4",
            "label": "option 4"
          }
        ],
        "default": "option 1"
      },
      {
        "type": "checkbox",
        "label": "checkbox",
        "id": "checkbox",
        "default": true
      },
    ],
    "blocks": [
      {
        "type": "image",
        "name": "image block",
        "limit": 2,
        "settings": [
          {
            "type": "header",
            "content": "Add Image"
          },
          {
            "type": "image_picker",
            "id": "image_card",
            "label": "image block 1"
          }
        ]

      },
    ],
    "presets": [
      {
        "name": "Learn settings list",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
  {% endschema %}
  
