<div class="banner-wrapper"> 
  <div class="row {{ section.settings.content_position }}">
    <div class="image-wrapper">
      {% if section.settings.image != blank %}
        <img 
          src="{{ section.settings.image | image_url }}" 
          alt="Desktop Banner" 
          loading="lazy" 
          width="auto" 
          height="auto" 
          class="desktop-banner" 
          sizes="(max-width: 768px) 100vw, 768px">
      {% endif %}
      {% if section.settings.image_mobile != blank %}
        <img 
          src="{{ section.settings.image_mobile | image_url}}" 
          alt="Mobile Banner" 
          width="auto" 
          height="auto" 
          class="mobile-banner" 
          sizes="(max-width: 768px) 100vw, 768px">
      {% endif %}
    </div>
    <div class="content-wrapper">
        <div class="content-inner-wrapper">
            {% if section.settings.heading  != blank %}
            <h2>{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.description  != blank %}
            {{ section.settings.description }}
             {% endif %}
             {% if section.settings.btn_text  != blank %}
            <a href="{% if section.settings.btn_link != blank %}{{ section.settings.btn_link }} else #{% endif  %}"> {{ section.settings.btn_text }}</a>
             {% endif %}
        </div>
    </div>
  </div>
</div>
{% style %}
{% if section.settings.bg-image-desktop %}
{% if section.settings.bg-image-mobile != blank %}
@media only screen and (min-width: 769px){
.custom-banner-bio-k .banner-wrapper { background-image: url('{{ section.settings.bg-image-desktop | image_url }}') }
}
{% else %}
.custom-banner-bio-k .banner-wrapper { background-image: url('{{ section.settings.bg-image-desktop | image_url }}') }
{% endif %}
{% endif %}
{% if section.settings.bg-image-mobile %}
@media only screen and (max-width: 768px){
.custom-banner-bio-k .banner-wrapper {background-image: url('{{ section.settings.bg-image-mobile | image_url }}')}
}
{% endif %}
.custom-banner-bio-k {padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0; }
.custom-banner-bio-k .row {display: flex;}
.custom-banner-bio-k .row >*{flex: 1 0 0;}
.custom-banner-bio-k .row.content-left{flex-flow: row-reverse;}
@media only screen and (min-width: 769px){
  .custom-banner-bio-k .mobile-banner { display:none; }
}
@media only screen and (max-width: 768px){
.custom-banner-bio-k {padding: {{ section.settings.padding_top_res }}px 0 {{ section.settings.padding_bottom_res }}px 0;}
.grid-item-blocks { min-height: {{ section.settings.grid_block_mob_height }}px; }
.custom-banner-bio-k .desktop-banner { display:none; }
}
{% endstyle %}
{% schema %}
{
  "name": "Custom Banner Bio-K",
  "tag": "section",
  "class": "custom-banner-bio-k",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "default": "Heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "description",
        "default": "<p>Description</p>",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "btn_text",
        "default": "Button Text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button Link"
      },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
    "type": "select",
    "id": "content_position",
    "options": [
    {
    "value": "content-left",
    "label": "content left"
    },
    {
    "value": "content-right",
    "label": "content right"
    }
    ],
    "default": "content-right",
    "label": "Content Position",
    "info": "Select for content position"
    },
    {
    "type": "image_picker",
    "id": "bg-image-desktop",
    "label": "Desktop BG Image"
    },
    {
    "type": "image_picker",
    "id": "bg-image-mobile",
    "label": "Desktop Mobile Image"
    },
    {
"type": "header",
"content": "Section Padding Setting For Desktop"
},
{
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Top",
"default": 36
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding Bottom",
"default": 36
},
{
"type": "header",
"content": "Section Padding Setting For Responsiveness"
},
{
"type": "range",
"id": "padding_top_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding top responsive",
"default": 36
},
{
"type": "range",
"id": "padding_bottom_res",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "Padding bottom responsive",
"default": 36
}
  ],
  "presets": [
    {
      "name": "Custom Banner Bio-K"
    }
  ]
}
{% endschema %}
